{% extends 'themes/base_admin.html.twig' %}

{% block title %}
	- Admin - Modification du Vehicule :
	{{vehicle.name}}
{% endblock %}

{% block description %}
	<meta name="description" content="Bienvenue sur la page de modification d'un vehicule de l'administrateur. La société Ride-Location vous propose des locations de voitures en click en collect. Cette sociétéé est détenu pas Monsieur Dwayne Johnson. Nous avons plusieurs agences en France.Venez faire un tour sur notre site, on a ce qu'il vous faut.">
{% endblock %}


{% block tinyMCE %}
	<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
	<script>
		tinymce.init({selector: 'textarea#vehicle_form_description'});
	</script>
{% endblock %}


{% block main %}
	<h1 class="text-center my-3 display-5">Modification du Vehicule :
		{{vehicle.name}}</h1>

	<div class="container mt-5">
		<div class="col-md-6 mx-auto">
			{{ form_start(form) }}
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="edit_vehicle_form_name">Nom :
						</label>
						<div class="text-danger">{{ form_errors(form.name) }}</div>
						{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="edit_vehicle_form_brand">Marque :
						</label>
						<div class="text-danger">{{ form_errors(form.brand) }}</div>
						{{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="edit_vehicle_form_model">Modele :
						</label>
						<div class="text-danger">{{ form_errors(form.model) }}</div>
						{{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="edit_vehicle_form_registration">Immatriculation :
						</label>
						<div class="text-danger">{{ form_errors(form.registration) }}</div>
						{{ form_widget(form.registration, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<div class="mb-3">
				<label for="edit_vehicle_form_agency">Agence :
				</label>
				<div class="text-danger">{{ form_errors(form.agency) }}</div>
				{{ form_widget(form.agency, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="row mb-3">
				<div class="col-md-6">
					<label for="edit_vehicle_form_imageFile">Image :
					</label>
					<div class="text-danger">{{ form_errors(form.imageFile) }}</div>
					{{form_widget(form.imageFile, {'attr': {'class': 'form-control'}})}}
				</div>
				<div class="col-md-6">
					{% if vehicle.image %}
						<img src="{{ vich_uploader_asset(vehicle, 'imageFile') | imagine_filter('admin_vehicle_thumbnail')}}" alt="{{ vehicle.name }}">
					{% else %}
						<img src="{{asset('images/vehicles/no_image.jpg') | imagine_filter('admin_vehicle_thumbnail')}}" alt="{{ vehicle.name}}">
					{% endif %}

				</div>
			</div>
			<div class="mb-3">
				<label for="edit_vehicle_form_dailyPrice">
					/jour :
				</label>
				<div class="text-danger">{{ form_errors(form.dailyPrice) }}</div>
				{{ form_widget(form.dailyPrice, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				<label for="edit_vehicle_form_description">Description :
				</label>
				<div class="text-danger">{{ form_errors(form.description) }}</div>
				{{form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 10}})}}
			</div>
			<div class="mb-3">
				<div class="mb-3">
					<input formnovalidate type="submit" class="btn btn-secondary" value="Sauvegarder">
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
