{% extends 'themes/base_admin.html.twig' %}

{% block title %}
	- Admin - Liste des Agences
{% endblock %}

{% block jQuery %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block Database %}
	<link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
	<script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
	<script>
		$(document).ready(function () {
$('#table').DataTable({
language: {
url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
}
});
});
	</script>
{% endblock %}

{% block main %}
	<h1 class="text-center my-3 display-5">Liste des Agences</h1>

	{% for message in app.flashes('success') %}
		<div class="alert text-center alert-success alert-dismissible fade show" role="alert">
			{{message}}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>

	{% endfor %}

	<div class="d-flex justify-content-end align-items-center my-3">
		<a class="btn btn-secondary" href="{{path('admin.agency.create')}}">
			<i class="fa-solid fa-plus shadow"></i>
			Nouvelle Agence</a>
	</div>


	<div class="table-responsive bg-secondary">
		<table id="table" class="table table-striped table-hover text-center table-bordered">
			<thead class="table-dark text-white">
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Adresse</th>
					<th>Ville</th>
					<th>Code Postal</th>
					<th>Image</th>
					<th>Description</th>
					<th>Créer Le
					</th>
					<th>Modifié Le</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				{% for agency in agencies %}
					<tr>
						<td>
							{{agency.id}}
						</td>
						<td>
							{{agency.name}}
						</td>
						<td>
							{{agency.address}}
						</td>
						<td>
							{{agency.town}}
						</td>
						<td>
							{{agency.zipCode}}
						</td>
						<td>
							<img src="{{ vich_uploader_asset(agency, 'imageFile')}}" alt="{{ agency.name }}">
						</td>
						<td>
							{{agency.description}}
						</td>
						<td>
							{{agency.createdAt|date('d-m-Y H:i:s')}}
						</td>
						<td>
							{{agency.updatedAt|date('d-m-Y H:i:s')}}
						</td>
						<td>
							<a title="Modifier" href="{{path('admin.agency.edit',{'id': agency.id})}}" class="text-primary m-2">
								<i class="fa-solid fa-pen-to-square"></i>
							</a>
							<a onclick="event.preventDefault(); return confirm('Confirmer la suppression de cette agence?') && document.querySelector('#form_delete_agency_{{agency.id}}').submit()" title="Supprimer" href="#" class="text-danger m-2">
								<i class="fa-solid fa-trash-can"></i>
							</a>
							<form method="POST" id="form_delete_agency_{{agency.id}}" action="{{path('admin.agency.delete', {'id':agency.id})}}">
								<input type="hidden" name="csrf_token" value="{{csrf_token('delete_agency_'~agency.id)}}">
								<input type="hidden" name="_method" value="delete">
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
