{% extends 'themes/base_admin.html.twig' %}

{% block title %}
	- Admin - Nouvelle Agence
{% endblock %}

{% block description %}
	<meta name="description" content="Bienvenue sur la page de création des agences de l'administrateur. La société Ride-Location vous propose des locations de voitures en click en collect. Cette sociétéé est détenu pas Monsieur Dwayne Johnson. Nous avons plusieurs agences en France.Venez faire un tour sur notre site, on a ce qu'il vous faut.">
{% endblock %}


{% block tinyMCE %}
	<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
	<script>
		tinymce.init({selector: 'textarea#agency_form_description'});
	</script>
{% endblock %}

{% block main %}
	{# titre de la section #}
	<h1 class="text-center my-3 display-5">Nouvelle Agence</h1>

	<div class="container mt-5">
		<div
			class="col-md-6 mx-auto">
			{# on creer le formulaire #}
			{{ form_start(form) }}
			<div class="mb-3">
				<label for="create_agency_form_name">Nom :
				</label>
				{# on affiche les messages d'erreur avec form errors#}
				<div class="text-danger">{{ form_errors(form.name) }}</div>
				{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="mb-3">
				<label for="create_agency_form_phone">Numero de Téléphone :
				</label>
				{# on affiche les messages d'erreur avec form errors#}
				<div class="text-danger">{{ form_errors(form.phone) }}</div>
				{# on mets en form l'input #}
				{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="mb-3">
				<label for="create_agency_form_address">Adresse :
				</label>
				<div class="text-danger">{{ form_errors(form.address) }}</div>
				{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="create_agency_form_town">Ville :
						</label>
						<div class="text-danger">{{ form_errors(form.town) }}</div>
						{{ form_widget(form.town, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="create_agency_form_zipCode">Code Postal :
						</label>
						<div class="text-danger">{{ form_errors(form.zipCode) }}</div>
						{{ form_widget(form.zipCode, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-md-6">
					<label for="create_agency_form_imageFile">Image</label>
					<div class="text-danger">{{ form_errors(form.imageFile) }}</div>
					{{form_widget(form.imageFile, {'attr': {'class': 'form-control'}})}}
				</div>
				<div class="col-md-6">
					<div class="preview-image-title"></div>
					<div class="preview-image-content"></div>
				</div>
			</div>
			<div class="mb-3">
				<label for="create_agency_form_description">Description</label>
				<div class="text-danger">{{ form_errors(form.description) }}</div>
				{{form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 10}})}}
			</div>
			<div class="mb-3">
				<div class="mb-3">
					<input formnovalidate type="submit" class="btn btn-secondary" value="Créer">
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}{% endblock %}
