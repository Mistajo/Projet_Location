{% extends 'themes/base_user.html.twig' %}

{% block title %}
	- User - Nos Agences
{% endblock %}

{% block main %}
	<h1 class="text-center my-3 display-5">Nos Agences</h1>
	<div class="container mt-5">
		<div class="row">
			{% for agency in agencies %}
				<div class="col-md-4 mb-3">
					<div class="card mx-3 border shadow h-100">
						<img src="{{ vich_uploader_asset(agency, 'imageFile') }}" class="card-img-top" alt="{{ agency.name }}">
						<div class="card-body">
							<h5 class="card-title">{{ agency.name }}</h5>
							<p class="card-text">{{ agency.description|striptags|u.truncate(70, '...')|raw }}</p>
							<a href="#" class="btn btn-primary">Voir</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
