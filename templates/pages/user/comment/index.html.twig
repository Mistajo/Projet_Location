{% extends 'themes/base_user.html.twig' %}

{% block title %}
	- User - Mes Commentaires
	{{app.user.firstName}}
	{{app.user.lastName}}

{% endblock %}

{% block jQuery %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block DataTables %}
	<link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
	<script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
{% endblock %}


{% block main %}

	{% for message in app.flashes('success') %}
		<div class="text-center alert alert-success alert-dismissible fade show" role="alert">
			{{message}}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}


	<section class="my-2">
		<h1 class="text-center my-3 display-5">Liste de mes Commentaires Agences</h1>
		<div class="table-responsive bg-secondary">
			<table id="table" class="table table-striped table-hover table-bordered">
				<thead class="table-dark">
					<tr>
						<td>Id</td>
						<td>Nom de l'agence</td>
						<td>Contenu</td>
						<td>Créé le :
						</td>
						<td>Options</td>
					</tr>
				</thead>
				<tbody>
					{% for comment in comments %}
						<tr class="tr-comment-{{comment.id}}">
							<td>{{comment.id}}</td>
							<td>
								{% if comment.agency is not empty %}
									{{comment.agency.name}}
								{% else %}
									<p>N/A</p>
								{% endif %}
							</td>
							<td class="text-center">
								<a title="Lire" href="#" class="btn-dark" data-bs-toggle="modal" data-bs-target="#modal_{{comment.id}}">
									<i class="fa-brands fa-readme"></i>
								</a>
								<!-- Modal -->
								<div class="modal fade" id="modal_{{comment.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header d-flex flex-column justify-content-center align-items-center">
												<h2 class="modal-title fs-5">Commentaire de
													{{comment.user.firstName}}
													{{comment.user.lastName}}</h2>
												<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
											</div>
											<div class="modal-body">
												{% if comment.agency is not empty %}
													<p>
														<strong>Agence</strong>
														:
														{{comment.agency.name}}</p>
												{% else %}
													<p>Pas d'agence</p>
												{% endif %}
												<p class="my-2">
													<strong>Commentaire</strong>
													:{{comment.content|nl2br}}
												</p>
												<p></p>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
											</div>
										</div>
									</div>
								</div>
							</td>
							<td>{{comment.createdAt|date('d-m-Y H:i:s')}}</td>
							<td>
								<a onclick="event.preventDefault(); return confirm('Confirmer la suppression de ce commentaire ?') && document.querySelector('#form_delete_comment_agency_{{comment.id}}').submit();" title="Supprimer" href="#" class="text-danger m-2">
									<i class="fa-solid fa-square-minus"></i>
								</a>
								<form method="POST" id="form_delete_comment_agency_{{comment.id}}" action="#">
									<input type="hidden" name="csrf_token" value="{{csrf_token('delete_comment_agency_'~comment.id)}}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</td>
						</tr>
					</tbody>
				{% endfor %}
			</table>
		</div>
	</section>

	<section class="my-3">
		<h1 class="text-center my-3 display-5">Liste des Commentaires Vehicules</h1>
		<div class="table-responsive bg-secondary">
			<table id="table1" class="table table-striped table-hover table-bordered">
				<thead class="table-dark">
					<tr>
						<td>Id</td>
						<td>Utilisateur</td>
						<td>Nom du vehicule</td>
						<td>Contenu</td>
						<td>Créé le :
						</td>
						<td>Options</td>
					</tr>
				</thead>
				<tbody>
					{% for comment in comments %}
						<tr>
							<td>{{comment.id}}</td>
							<td>{{comment.user.firstName}}
								{{comment.user.lastName}}</td>
							<td>
								{% if comment.vehicle is not empty %}
									{{comment.vehicle.name}}
								{% else %}
									<p>Ne concerne pas un vehicle</p>
								{% endif %}
							</td>
							<td class="text-center">
								<a title="Lire" href="#" class="btn-dark" data-bs-toggle="modal" data-bs-target="#modal_{{comment.id}}">
									<i class="fa-brands fa-readme"></i>
								</a>
								<!-- Modal -->
								<div class="modal fade" id="modal_{{comment.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header d-flex flex-column justify-content-center align-items-center">
												<h2 class="modal-title fs-5">Commentaire de
													{{comment.user.firstName}}
													{{comment.user.lastName}}</h2>
												<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
											</div>
											<div class="modal-body">
												<p>
													<strong>Vehicule</strong>
													:
													{% if comment in vehicles %}
														{{comment.vehicle.name}}
													{% endif %}
												</p>
												<p class="my-2">
													<strong>Commentaire</strong>
													:{{comment.content|nl2br}}
												</p>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
											</div>
										</div>
									</div>
								</div>
							</td>
							<td>{{comment.createdAt|date('d-m-Y H:i:s')}}</td>
							<td>
								<a onclick="event.preventDefault(); return confirm('Confirmer la suppression de ce commentaire ?') && document.querySelector('#form_delete_comment_vehicle_{{comment.id}}').submit();" title="Supprimer" href="#" class="text-danger m-2">
									<i class="fa-solid fa-square-minus"></i>
								</a>
								<form method="POST" id="form_delete_comment_vehicle_{{comment.id}}" action="{{path('admin.comment.delete_vehicle', {'id': comment.id})}}">
									<input type="hidden" name="csrf_token" value="{{csrf_token('delete_comment_vehicle_'~comment.id)}}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>


{% endblock %}
{% block javascripts %}
	<script>
		$(document).ready(function () {
let table = $('#table').DataTable({
language: {
url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
}
});
});
	</script>
	<script>
		$(document).ready(function () {
let table = $('#table1').DataTable({
language: {
url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
}
});
});
	</script>
{% endblock %}
