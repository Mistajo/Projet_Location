{% extends 'themes/base_user.html.twig' %}

{% block title %}
	- User - Mes Réservations
	{{app.user.firstName}}
	{{app.user.lastName}}

{% endblock %}

{% block main %}
	<h1 class="text-center my-3 display-5">Mes Reservations :
		{{app.user.firstName}}
		{{app.user.lastName}}</h1>

	<div class="table-responsive bg-secondary">
		<table id="table" class="table table-striped table-hover text-center table-bordered">
			<thead class="table-dark text-white">
				<tr>
					<th></th>
					<th>Id</th>
					<th>Nom de L'Agence</th>
					<th>Nom du Vehicule</th>
					<th>Date de Debut</th>
					<th>Date de Fin</th>
					<th>Prix à Payer</th>
					<th>Date de Validation</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr class="tr-reservation-{{reservation.id}}">
						<td>
							<input type="checkbox" class="check-agency" data-id="{{reservation.id}}">
						</td>
						<td>
							{{reservation.id}}
						</td>
						<td>
							{{reservation.agency.name}}
						</td>
						<td>
							{{reservation.vehicle.name}}
						</td>
						<td>
							{{reservation.startDate|date('d-m-Y H:i:s')}}
						</td>
						<td>
							{{reservation.endDate|date('d-m-Y H:i:s')}}
						</td>
						<td>
							{{reservation.totalPrice}}
						</td>
						<td>
							{{reservation.createdAt|date('d-m-Y H:i:s')}}
						</td>
						<td>
							<a onclick="event.preventDefault(); return confirm('Voulez-vous supprimer cette reservation?') && document.querySelector('#form_delete_reservation_{{reservation.id}}').submit()" title="Supprimer" href="#" class="text-danger m-2">
								<i class="fa-solid fa-trash-can"></i>
							</a>
							<form method="POST" id="form_delete_reservation_{{reservation.id}}" action="#">
								<input type="hidden" name="csrf_token" value="{{csrf_token('delete_reservation_'~reservation.id)}}">
								<input type="hidden" name="_method" value="delete">
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
