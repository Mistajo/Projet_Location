{% extends 'themes/base_visitor.html.twig' %}

{% block title %}
	- Réinitialisation du mot de passe
{% endblock %}

{% block description %}
	<meta name="description" content="Bienvenue sur notre page de réinitialisation du mot de passe. La société Ride-Location vous propose des locations de voitures en click en collect. Cette sociétéé est détenu pas Monsieur Dwayne Johnson. Nous avons plusieurs agences en France.Venez faire un tour sur notre site, on a ce qu'il vous faut.">
{% endblock %}


{% block main %}
	<main
		class="container-fluid">
		{# on affiche les messages d'erreur de réinitialisation de mot de passe #}
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		<h1 class="text-center my-3 display-5">Réinitialisation du mot de passe</h1>

		<div class="container mt-5">
			<div class="row">
				<div
					class="col-md-6 mx-auto">
					{# on creer le formulaire #}
					{{ form_start(requestForm) }}
					<div class="mb-3">
						<label for="reset_password_request_form_email">Email</label>
						<div class="text-danger">{{form_errors(requestForm.email)}}</div>
						{{form_widget(requestForm.email, {'attr': {'class':'form-control'}})}}
						<small>
							Entrez votre adresse email, et nous vous enverrons un lien pour la réinitialisation du mot de passe.
						</small>
					</div>
					<div class="mb-3">
						<input formnovalidate type="submit" class="btn btn-primary" value="Envoyer">
					</div>
					{{ form_end(requestForm) }}
				</div>
			</div>
		</div>
	</main>


{% endblock %}
